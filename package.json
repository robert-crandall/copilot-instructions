{
  "name": "example_app",
  "version": "1.0.0",
  "description": "Example application",
  "type": "module",
  "scripts": {
    "devctl": "node scripts/devctl.mjs",
    "dev": "node scripts/devctl.mjs start",
    "dev:force": "node scripts/devctl.mjs start --force",
    "dev:migrate": "node scripts/devctl.mjs start --migrate",
    "dev:restart": "node scripts/devctl.mjs restart",
    "dev:stop": "node scripts/devctl.mjs stop",
    "dev:status": "node scripts/devctl.mjs status",
    "dev:status:json": "node scripts/devctl.mjs status --json",
    "dev:logs": "node scripts/devctl.mjs logs",
    "logs": "node scripts/devctl.mjs logs",
    "dev:logs:backend": "node scripts/devctl.mjs logs --backend",
    "dev:logs:frontend": "node scripts/devctl.mjs logs --frontend",
    "test:backend": "bun scripts/tests.ts backend",
    "test:frontend": "bun scripts/tests.ts frontend",
    "test:e2e": "bun scripts/tests.ts e2e",
    "test": "bun scripts/tests.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "bun run format:check && cd backend && bun run lint && cd ../frontend && bun run lint",
    "db:push": "cd backend && drizzle-kit push",
    "db:generate": "cd backend && drizzle-kit generate",
    "db:migrate": "cd backend && drizzle-kit migrate",
    "db:studio": "cd backend && drizzle-kit studio",
    "db:setup": "bun scripts/setup-db.ts",
    "db:setup:force": "bun scripts/setup-db.ts --force",
    "db:reset": "bun scripts/setup-db.ts --reset",
    "db:reset:force": "bun scripts/setup-db.ts --reset --force"
  },
  "workspaces": [
    "backend",
    "frontend",
    "packages/types"
  ],
  "devDependencies": {
    "concurrently": "^9.2.0",
    "node-fetch": "^3.3.2"
  }
}
